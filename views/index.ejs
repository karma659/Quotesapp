<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title> Quote App</title>
    <style> 
* {
  box-sizing: border-box;
  color:rgb(3, 78, 19);
}
     .box1{
   background-position: center;
      background-attachment: fixed;

     }
        .boxe {
           float:left;
            background:rgb(114, 247, 218);
            padding: 0.5em;
            margin: 0.5em;
            border-radius: 0.5em;
        }
      #delete-button,#update-button,#submit
      {
          background-color:chartreuse;
          border-radius: 0.5em;
      }
      #message
      {
             color:red;
      }
      
        h1{
            color:rgb(4, 65, 4);
            text-align:center;
            font-weight:800;
            font-family: Georgia, 'Times New Roman', Times, serif;
        }
        h2{
            color:rgb(8, 8, 250);
            text-align:center;
        }

    </style> 
  </head>

  <body>
     
    <h1>QUOTES</h1>

<div class="box1">

     <div class="boxe">

        <h2> Add Quotes </h2>

    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button id=submit type="submit">Submit</button>
    </form>
         
    
<ul class="quotes">
  <!-- Loop through quotes -->
  <% for(var i = 0; i < quotes.length; i++) {%>
    <li class="quote">
      <!-- Output name from the iterated quote object -->
      <span><%= quotes[i].name %></span>:
      <!-- Output quote from the iterated quote object -->
      <span><%= quotes[i].quote %></span>
    </li>
  <% } %>
</ul>
     </div>

 <div class="boxe">

    <h2>Darth Vadar invades!</h2>
    <p>
      Replace first Yoda's quote with a quote written by Darth Vadar
    </p>
    <button id="update-button">Replace Yoda's quote</button>
 </div>


  <div class="boxe">
    <h2>Remove Darth Vadar!</h2>
    <p>
      Delete one Darth Vadar's quote. Does nothing if there are no more Darth
      Vadar's quote
    </p>
    <button id="delete-button">Delete Darth Vadar's quote</button>
    <div id="message"></div> 
</div>


  </div>

  <script src="/main.js"></script>
  </body>
</html>